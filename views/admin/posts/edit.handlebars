<h1>Edit Post</h1>

<!-- uses PUT http method to send request to router with post id -->
<form action="/admin/posts/edit/{{post.slug}}?_method=PUT" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{post.title}}">
    </div>
    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" name="file" class="form-control">
    </div>
    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id="category" class="form-control">
            {{#select post.category}}
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label for="status">Post Status</label>
        <select name="status" id="status" class="form-control">
            {{#select post.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
            {{/select}}
        </select>
    </div>
    <div class="form-check">
        <label for="alllowComments" class="form-check-label">
        <input type="checkbox" name="allowComments" class="form-check-input" id="allowComments" {{#if post.allowComments}} checked="checked" {{/if}}>
        Allow Comments?</label>
    </div>
    <div class="form-group">
        <label for="body">Description</label>
        <textarea rows="10" cols="30" name="body" class="form-control" id="body">{{post.body}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update Post</button>
</form>